<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Celcius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:textColor="@color/black"
        android:text="Celcius :" />

    <EditText
        android:id="@+id/inputCelcius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@id/Celcius"
        android:hint="Masukkan Suhu Celcius"/>

    <TextView
        android:id="@+id/fahrenheit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:layout_below="@id/inputCelcius"
        android:text="Fahrenheit :" />

    <EditText
        android:id="@+id/inputFahrenheit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@id/fahrenheit"
        android:hint="Masukkan Suhu fahrenheit"/>

    <TextView
        android:id="@+id/kelvin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:layout_below="@id/inputFahrenheit"
        android:text="Kelvin :" />

    <EditText
        android:id="@+id/inputKelvin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        android:layout_below="@id/kelvin"
        android:hint="Masukkan Suhu kelvin"/>


</RelativeLayout>
